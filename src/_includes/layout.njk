            <nav>
              <a href="/">About</a>
              <a href="/posts">Posts</a>
              <a href="/series">Series</a>
            </nav>
          </div>
        </center>
      </header>

      <main>
        {% block content %}
          {{ content | safe }}
        {% endblock %}
      </main>
    </div>

    <footer>
      <center>
        <div class="footer-inner-container">
